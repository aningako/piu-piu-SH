sprite_boom () {
    BX=$OX BY=$OY
    [[ $AS -ge $AL ]] && { unset BP3[i]; return; }
    boom$AS; mov; BP3[i]="boom $BX $BY 0 0 $SC $SM $CS $CL $AS $AL"
}

